{
    //в какой среде будет выполняться код
    "env": {
        "browser": true,
        "es2021": true
    },
    // наследование конфигурации. Можно оставить, если цель придерживаться одного стиля выполнения на основе рекомендуемых параметров
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    // кастомные правила
    "rules": {
        // всегда ставить точку с запятой
        "semi": [
            "error",
            "always"
        ],
        // отступ на два пробела
        "indent": [
            "error",
            2,
            {
                "SwitchCase": 1
            }
        ],
        // не использовать одинарные кавычки
        "quotes": [
            "error",
            "single"
        ]
    }
}